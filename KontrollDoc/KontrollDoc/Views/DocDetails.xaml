<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KontrollDoc.Views.DocDetails"
             BackgroundColor="#7B68EE"
             Title="Dokumentum módosítása">

    <NavigationPage.TitleView>
        <Grid HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button 
                Text="Frissít" 
                TextColor="White" 
                BackgroundColor="#2196F3" 
                Grid.Column="1" 
                Clicked="Frissit_Clicked"/>

        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView Margin="10,10,10,10">
            <Frame BackgroundColor="#C0E8D5" Margin="0,0,0,0" Padding="0,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center" CornerRadius="10">
                <Grid BackgroundColor="#C0E8D5" HorizontalOptions="Fill" VerticalOptions="Center" Margin="4,4,4,4" Padding="2,2,2,2" ColumnSpacing="2" RowSpacing="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2.0*" />
                    </Grid.ColumnDefinitions>

                    <BoxView Grid.Row="0"
                             Grid.Column="0"/>

                    <Label  Grid.Row="0"
                            Grid.Column="0" 
                            Text="Típus:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="0"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <Picker
                            x:Name="Tipus_Picker"
                            Scale="1" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"/>

                        <Button
                            Clicked="Tipus_Button_Clicked"
                            Text="..." 
                            Scale="0.8" 
                            WidthRequest="45"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>

                    </StackLayout>

                    <BoxView Grid.Row="1"
                             Grid.Column="0"/>

                    <Label  Grid.Row="1"
                            Grid.Column="0" 
                            Text="Külső iktatószám:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="1"
                             Grid.Column="1"/>

                    <Entry 
                        x:Name="Iktato_Entry"
                        Grid.Row="1"
                        Grid.Column="1"
                        Scale="1" 
                        WidthRequest="300" 
                        BackgroundColor="White"
                        TextColor="Black"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"/>

                    <BoxView Grid.Row="2"
                             Grid.Column="0"/>

                    <Label  Grid.Row="2"
                            Grid.Column="0" 
                            Text="Nem használt:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="2"
                             Grid.Column="1"/>

                    <CheckBox 
                            x:Name="Hasznalt_CheckBox"
                            Grid.Row="2"
                            Grid.Column="1"
                            Scale="1" 
                            Color="#5CB8B2"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="3"
                             Grid.Column="0"/>

                    <Label  Grid.Row="3"
                            Grid.Column="0" 
                            Text="Partner kód:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="3"
                             Grid.Column="1"/>

                    <Picker 
                            SelectedIndexChanged="Partner_Kod_Picker_SelectedIndexChanged"
                            x:Name="Partner_Kod_Picker"
                            Grid.Row="3"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="4"
                             Grid.Column="0"/>

                    <Label  Grid.Row="4"
                            Grid.Column="0" 
                            Text="Partner cég:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="4"
                             Grid.Column="1"/>

                    <Picker 
                            SelectedIndexChanged="Partner_Nev_Picker_SelectedIndexChanged"
                            x:Name="Partner_Nev_Picker"
                            Grid.Row="4"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="5"
                             Grid.Column="0"/>

                    <Label  Grid.Row="5"
                            Grid.Column="0" 
                            Text="Sorszám:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="5"
                             Grid.Column="1"/>

                    <Entry  
                            x:Name="Sorszam_Entry"
                            Text=""
                            IsEnabled="False"
                            Grid.Row="5"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="LightGray"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="6"
                             Grid.Column="0"/>

                    <Label  Grid.Row="6"
                            Grid.Column="0" 
                            Text="Téma:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="6"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
                        <Picker  
                            Scale="1" 
                            x:Name="Tema_Picker"
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"/>

                        <Button
                            Clicked="Tema_Button_Clicked"
                            x:Name="Tema_Button"
                            Text="..." 
                            Scale="0.8" 
                            WidthRequest="45"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                    </StackLayout>


                    <BoxView Grid.Row="7"
                             Grid.Column="0"/>

                    <Label  Grid.Row="7"
                            Grid.Column="0" 
                            Text="Tárgy:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="7"
                             Grid.Column="1"/>

                    <Entry  
                            x:Name="Targy_Entry"
                            Grid.Row="7"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="8"
                             Grid.Column="0"/>

                    <Label  Grid.Row="8"
                            Grid.Column="0" 
                            Text="Telefon:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="8"
                             Grid.Column="1"/>

                    <Entry 
                        Keyboard="Telephone"
                        x:Name="Telefon_Entry"
                        Grid.Row="8"
                        Grid.Column="1"
                        Scale="1" 
                        WidthRequest="300" 
                        BackgroundColor="White"
                        TextColor="Black"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"/>

                    <BoxView Grid.Row="9"
                             Grid.Column="0"/>

                    <Label  Grid.Row="9"
                            Grid.Column="0" 
                            Text="Hordozó:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="9"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="9" Grid.Column="1" Orientation="Horizontal">
                        <Picker  
                            Scale="1" 
                            x:Name="Hordozo_Picker"
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"/>

                        <Button
                            Clicked="Hordozo_Button_Clicked"
                            x:Name="Hordozo_Button"
                            Text="..." 
                            Scale="0.8" 
                            WidthRequest="45"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                    </StackLayout>


                    <BoxView Grid.Row="10"
                             Grid.Column="0"/>

                    <Label  Grid.Row="10"
                            Grid.Column="0" 
                            Text="Felvétel Dátuma:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="10"
                             Grid.Column="1"/>

                    <DatePicker  
                            x:Name="Felvetel_DatePicker"
                            Grid.Row="10"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="11"
                             Grid.Column="0"/>

                    <Label  Grid.Row="11"
                            Grid.Column="0" 
                            Text="Határidő:"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="11"
                             Grid.Column="1"/>

                    <CheckBox  
                            x:Name="Hatarido_Checkbox"
                            Grid.Row="11"
                            Grid.Column="1"
                            Scale="1" 
                            Color="#5CB8B2"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            CheckedChanged="Hatarido_CheckBox_CheckedChanged"/>

                    <BoxView Grid.Row="12"
                             Grid.Column="0"/>

                    <Label  Grid.Row="12"
                            Grid.Column="0" 
                            Text="Határidő Dátuma:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="12"
                             Grid.Column="1"/>

                    <DatePicker  
                            x:Name="Hatarido_DatePicker"
                            Grid.Row="12"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="LightGray"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"
                            IsEnabled="False"/>

                    <BoxView Grid.Row="13"
                             Grid.Column="0"/>

                    <Label  Grid.Row="13"
                            Grid.Column="0" 
                            Text="Projekthivatkozás:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="13"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="13" Grid.Column="1" Orientation="Horizontal">
                        <Picker  
                            x:Name="Project_Picker"
                            Scale="1" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"/>

                        <Button
                            Clicked="Project_Button_Clicked"
                            x:Name="Project_Button"
                            Text="..." 
                            Scale="0.8" 
                            WidthRequest="45"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                        
                    </StackLayout>


                    <BoxView Grid.Row="14"
                             Grid.Column="0"/>

                    <Label  Grid.Row="14"
                            Grid.Column="0" 
                            Text="Megjegyzés:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="14"
                             Grid.Column="1"/>

                    <Entry  
                            x:Name="Megjegyzes_Entry"
                            Grid.Row="14"
                            Grid.Column="1"
                            Scale="1" 
                            WidthRequest="300" 
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="15"
                             Grid.Column="0"/>

                    <Label  Grid.Row="15"
                            Grid.Column="0" 
                            Text="Csatolmányok:" 
                            TextColor="Black"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"/>

                    <BoxView Grid.Row="15"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="15" Grid.Column="1" Orientation="Horizontal" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center" Padding="0">
                        <Button Text="hozzáadás" Scale="0.8" Clicked="Csatolmany_Hozzaadasa_Clicked"/>
                    </StackLayout>

                    <BoxView Grid.Row="16"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"/>


                    <StackLayout Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center" Padding="0">
                        <ListView x:Name="csatolmanyok_ListView"  HeightRequest="50">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame Padding="0,0,0,0" Margin="0,0,0,0" BackgroundColor="White">
                                            <Grid Padding="0,0,0,0" Margin="0,0,0,0" ColumnSpacing="0" RowSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.2*" />
                                                    <ColumnDefinition Width="0.5*" />
                                                    <ColumnDefinition Width="0.3*" />
                                                    <ColumnDefinition Width="0.3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label TextColor="Black" Grid.Column="0" Scale="0.8" Text="{Binding FileName}" />
                                                <Label TextColor="Black" Grid.Column="1" Scale="0.8"  Text="{Binding FullPath}" />
                                                <Button Grid.Column="2" BackgroundColor="#D3D3D3" TextColor="Black" Scale="0.6" FontSize="Micro" Text="megnyitás" Clicked="csat_letoltes_Clicked"/>
                                                <Button Grid.Column="3" BackgroundColor="#D3D3D3" TextColor="Black" Scale="0.6" FontSize="Micro" Text="törlés" Clicked="csat_torles_Clicked"/>
                                            </Grid>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>

                    <BoxView Grid.Row="17"
                             Grid.Column="0"/>

                    <Label  Grid.Row="17"
                            Grid.Column="0" 
                            Text="Mellékletek:" 
                            TextColor="Black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>

                    <BoxView Grid.Row="17"
                             Grid.Column="1"/>

                    <StackLayout Grid.Row="17" Grid.Column="1" Orientation="Horizontal" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center" Padding="0">
                        <Button Text="hozzáadás" Scale="0.8" Clicked="Hozzaadas_Clicked"/>
                    </StackLayout>



                    <BoxView Grid.Row="18"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"/>

                    <StackLayout Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center" Padding="0">
                        <ListView x:Name="Mellékletek_ListView" BackgroundColor="White">
                            <ListView.Header>
                                <Grid Padding="0,0,0,0" Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" TextColor="Black" Text="Sorszám" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Label Grid.Row="0" Grid.Column="1" TextColor="Black" Text="Tárgy" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame Padding="0,0,0,0" Margin="0,0,0,0" >
                                            <Grid Padding="0,0,0,0" Margin="0,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Label HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Grid.Column="0" Scale="0.8" Text="{Binding Sorszam}" />
                                                <Label HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Grid.Column="1" Scale="0.8"  Text="{Binding Targy}" />
                                            </Grid>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                    </StackLayout>
                </Grid>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>